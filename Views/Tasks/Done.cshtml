@model TaskRegistrationSystem.Models.Tasks

@{
    ViewData["Title"] = "QA";
}

<h1>QA</h1>

<h3>Are you sure you about the changes?</h3>
<div>
    <h4>Tasks</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TaskName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TaskName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Programmer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Programmer)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IssueDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IssueDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QA)
        </dt>
